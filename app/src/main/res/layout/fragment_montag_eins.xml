        android:layout_width="wrap_content"
        android:id="@+id/tableLayoutTage">

        <TableRow>

            <TableLayout>

                <TextView
                    android:clickable="true"
                    android:id="@+id/textViewFachMontag"
                    android:layout_width="30dp"
                    android:text="-"/>

                <TextView
                    android:clickable="true"
                    android:id="@+id/textViewLehrerMontag"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/textViewRaumMontag"
                    android:layout_width="30dp"
                    android:text="-" />

            </TableLayout>



        </TableRow>

    </TableLayout>


</RelativeLayout>